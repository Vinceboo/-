/* pages/chat/chat.wxss - Dark Apple HIG Theme */

/* ===== 全局页面 ===== */
page {
  background-color: #000000;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

/* ===== 消息列表 ===== */
.chat-list {
  flex: 1;
  padding: 16px 16px 0;
  box-sizing: border-box;
  overflow-y: scroll;
}

.list-bottom-padding {
  height: 80px;
}

/* ===== 消息行 ===== */
.message-row {
  display: flex;
  margin-bottom: 16px;
  width: 100%;
}

.user-row {
  justify-content: flex-end;
}

.ai-row {
  justify-content: flex-start;
}

/* ===== 气泡 ===== */
.bubble {
  max-width: 78%;
  padding: 10px 14px;
  border-radius: 18px;
  font-size: 15px;
  line-height: 1.5;
  word-break: break-word;
}

/* 用户气泡：Apple 蓝 */
.user-bubble {
  background-color: #0A84FF;
  color: #FFFFFF;
  border-bottom-right-radius: 4px;
}

/* AI 气泡：深灰 */
.ai-bubble {
  background-color: #1C1C1E;
  color: #FFFFFF;
  border-bottom-left-radius: 4px;
}

/* ===== 加载动画（三点） ===== */
.loading-dots {
  display: flex;
  gap: 6px;
  padding: 4px 2px;
  align-items: center;
}

.dot {
  font-size: 8px;
  color: rgba(235, 235, 245, 0.4);
  animation: blink 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes blink {
  0%, 80%, 100% { opacity: 0.3; }
  40%            { opacity: 1; }
}

/* ===== Wemark Markdown 样式（AI 气泡内） ===== */
.ai-bubble .wemark_wrapper {
  color: #FFFFFF;
}

.ai-bubble .wemark_block_h1 {
  font-size: 20px;
  font-weight: 700;
  margin: 8px 0 6px;
  color: #FFFFFF;
}

.ai-bubble .wemark_block_h2 {
  font-size: 17px;
  font-weight: 600;
  margin: 6px 0 4px;
  color: #FFFFFF;
}

.ai-bubble .wemark_block_h3 {
  font-size: 15px;
  font-weight: 600;
  margin: 4px 0;
  color: #EBEBF5;
}

.ai-bubble .wemark_block_text {
  font-size: 15px;
  line-height: 1.6;
  color: #EBEBF5;
  margin: 2px 0;
}

.ai-bubble .wemark_block_list_item {
  font-size: 15px;
  line-height: 1.6;
  color: #EBEBF5;
  padding-left: 4px;
  margin: 2px 0;
}

.ai-bubble .wemark_inline_bold {
  font-size: 15px;
  font-weight: 600;
  color: #FFFFFF;
  margin: 2px 0;
}

/* ===== 输入区域 ===== */
.input-area {
  position: relative;
  background-color: #000000;
  padding: 10px 16px;
  padding-bottom: calc(10px + env(safe-area-inset-bottom));
  border-top: 0.5px solid rgba(84, 84, 88, 0.6);
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #1C1C1E;
  border-radius: 22px;
  padding: 8px 8px 8px 14px;
  min-height: 44px;
  transition: opacity 0.2s;
}

/* 禁用状态 */
.input-wrapper--disabled {
  opacity: 0.6;
}

.input-field {
  flex: 1;
  color: #FFFFFF;
  font-size: 15px;
  line-height: 1.4;
  background: transparent;
}

.input-placeholder {
  color: rgba(235, 235, 245, 0.35);
}

/* ===== 发送按钮 ===== */
.send-btn {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(235, 235, 245, 0.15);
  margin-left: 8px;
  flex-shrink: 0;
  transition: background-color 0.15s;
}

/* 有输入内容时高亮 */
.send-btn--active {
  background-color: #0A84FF;
}

/* 加载中灰色 */
.send-btn--disabled {
  background-color: rgba(235, 235, 245, 0.08);
}

.send-icon {
  font-size: 16px;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
}
